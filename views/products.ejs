<%- include('partials/header.ejs') %>
    <main class="products bg-red-300 flex-1 pt-[calc(var(--height-header)+10px)]">
        <section class="grid grid-cols-1 max-w-[80vw] m-[0_auto] md:max-w-[90vw] md:grid-cols-[300px_1fr]">
            <div>
                Filtrado de productos
            </div>
            <div>
                <ul class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-4">
                    <% products.forEach(p => { %>
                     <li>
                        <a href="<%= `/products/${p.id}` %>">
                        <figure>
                            <img src="<%= p.image %>" alt="<%= p.name %>">
                        </figure>
                        <div>
                            <h2><%= p.name %></h2>
                            <h3><%= p.price %></h3>

                        </div>
                        </a>
                     </li>
                    <% }) %>
                </ul>
            </div>
        </section>
    </main>
    <%- include('partials/footer.ejs') %>
    <%- //include('scripts/script_products.ejs',{}) %>